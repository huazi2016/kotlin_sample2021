<resources>
    <!-- 基本主题 -->
    <style name="TestAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 全屏主题 -->
    <style name="TestAppTheme.FullScreen">
        <!-- 全屏显示 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="TestAppTheme.FullScreen.Splash">
        <!-- 半透明虚拟导航栏且布局延伸到导航栏下面 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- 半透明状态栏且布局延伸到状态栏下面 -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 窗口背景 -->
        <!--<item name="android:windowBackground">@drawable/splash_home_icon</item>-->
    </style>

    <!-- 白色状态栏主题 -->
    <style name="TestAppTheme.WhiteStatusBar">
        <item name="colorPrimaryDark">@color/c_white</item>
    </style>
</resources>