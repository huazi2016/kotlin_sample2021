<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="dialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--dialog的整个屏幕的背景是否有遮障层-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="webViewPbStyle_Blue" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:max">100</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:progressDrawable">@drawable/comm_web_progress</item>
    </style>
    <declare-styleable name="CommonTitleView">
        <attr name="isShowLeftIcon" format="boolean" />
        <attr name="titleBackground" format="color" />
        <attr name="centerTitle" format="string" />
        <attr name="centerTextColor" format="color" />
        <attr name="centerTextSize" format="float" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="float" />
        <attr name="leftDrawable" format="reference" />
        <attr name="rightDrawable" format="reference" />
    </declare-styleable>
</resources>